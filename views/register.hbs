<body>
 
{{#if errorMessage}}
<div class="alert alert-danger"> <strong>Error:</strong> {{errorMessage}}</div>
{{/if}}
{{#unless successMessage}}

<h1 id="h1">Register</h1><br>
<div class="panel panel-default">
    <div class="panel-body">

<form action="/register" method="POST">

<input id="title" type="text" name="userName" placeholder="User Name" required/><br><br>

<input id="title" type="password" name="password" placeholder="Password" required/><br><br>

<input id="title" type="password" name="password2" placeholder="Confirm Password" required/><br><br>

<input id="title" type="email" name="email" placeholder="Email Address" required/><br><br>

<button type="submit" class="btn btn-default">Register</button>
        </div>
    </div>
</form>
{{else}}
<div class="alert alert-success"> <strong>Success:</strong> {{successMessage}}</div><a class="btn btn-success pull-right" href="/login">&nbsp;&nbsp;&nbsp;Proceed to Log in&nbsp;&nbsp;&nbsp;</a><br /><br /><br /> 
{{/unless}}
</body>