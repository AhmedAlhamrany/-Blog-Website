
<body>
 
<h1 id="h1">Add Post</h1><br>
<div class="panel panel-default">
    <div class="panel-body">

<form action="/posts/add" method="POST" enctype="multipart/form-data">

<label for="featureImage">Upload photo:</label><br>
<input id="featureImage" type="file" name="featureImage"><br><br>

<label for="title">Title:</label><br>
<input id="title" type="text" name="title"/><br><br>

<label for="body">Body:</label><br>
<textarea id="body" rows="7" cols="50" name="body"></textarea><br><br>

{{#if categories}}
      <select class="form-control" name="category" id="category">
            <option value="" >Select Category</option>
            {{#each categories}}
                  <option value="{{id}}">{{category}}</option>
            {{/each}}
      </select>
{{else}}
      <div>No Categories</div>
{{/if}}
<br><br>

<label for="body">Published:</label><br>
<input id="published" type="radio" name="published"> Yes<br><br>
<button type="submit" class="btn btn-default">Submit form</button>
        </div>
    </div>
</form>
</body>
