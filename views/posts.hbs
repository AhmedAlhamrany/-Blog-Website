<div class="row">
    <div class="col-md-12">
          <h2>Posts:</h2>
        <hr />
          <table border="1">
            <th>Post ID</th>
            <th>Title</th>
            <th>Post Date</th>
            <th>Category</th>
            <th>Published</th>
            {{#each posts}}
            <tr>
                <td>{{id}}</td>
                <td>{{title}}</td>
                <td>{{postDate}}</td>
                <td>{{category}}</td>
                <td>{{published}}</td>
            </tr>
            {{/each}}
          </table>
    </div>
    {{#unless categories}}
    <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
        {{/unless}}
</div>


