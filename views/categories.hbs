<div class="row">
    <div class="col-md-12">
          <h2>Categories: <a href="/categories/add" class="btn btn-success pull-right">Add Category</a></h2>
          <hr />
          <table border="1">
            <th>Category ID</th>
            <th>Category Name</th>
          
            {{#each categories}}
            <tr>
                <td><a href="/posts?category={{id}}">{{id}}</td>
                <td><a href="/posts?category={{id}}">{{category}}</td>
                <td><a href="/categories/delete/{{id}}" class="btn btn-danger">remove {{id}}</a></td>
            </tr>
            {{/each}}
          </table>
    </div>
    {{#unless categories}}
    <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
        {{/unless}}
</div>


